{
	"firebase": "ng2-lab",
	"public": "dist/public",
	"ignore": [
		"bower_components",
		"media",
		"node_modules",
		"scripts",
		"src",
		"test",
		"typings",
		"**/.*",
		"bower.json",
		"browsers.config.js",
		"firebase.json",
		"gulpfile.babel.js",
		"jsconfig.json",
		"karma.config.js",
		"package.json",
		"protractor.config.js",
		"rules.json",
		"test.js",
		"tsconfig.js",
		"tslint.json",
		"typings.json"
	],
	"headers": [{
		"source" : "**/*.@(js|html|css|map)",
		"headers" : [{
			"key" : "Cache-Control",
			"value" : "max-age=3600"
		}]
	}],
	"rules": "./rules.json"
}